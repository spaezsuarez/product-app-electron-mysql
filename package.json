{
  "name": "electron-mysql-crud",
  "version": "1.0.0",
  "description": "Ejemplo de un crud utlizando electron y msyql",
  "main": "src/index.js",
  "scripts": {
    "start:dev": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "author": {
    "name": "Sergio David Paez Suarez",
    "email": "spaezsuarez@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/spaezsuarez/product-app-electron-mysql"
  },
  "license": "MIT",
  "dependencies": {
    "mysql": "^2.18.1"
  },
  "devDependencies": {
    "electron": "^11.2.0",
    "electron-builder": "^22.9.1"
  },
  "build": {
    "appId": "Product.app",
    "asar": true,
    "productName": "Product App",
    "copyright": "Copyright Â© 2021 Sergio David Paez Suarez",
    "directories": {
      "buildResources": "build",
      "output": "dist"
    },
    "linux": {
      "target": [
        "AppImage",
        "pacman"
      ],
      "icon": "build/icon.png"
    },
    "win": {
      "target": [
        "NSIS",
        "portable",
        "msi"
      ],
      "icon": "build/icon.ico"
    }
  }
}
